<Window x:Class="Wonderlust.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:v="clr-namespace:Wonderlust.WPF.Views"
        xmlns:vm="clr-namespace:Wonderlust.WPF.ViewModels"
        mc:Ignorable="d"
        UseLayoutRounding="True"
        Title="MainWindow" Height="450" Width="800" d:DataContext="{d:DesignInstance {x:Type vm:MainWindowVM}, IsDesignTimeCreatable=True}">

    <ListBox Name="ListBox" 
             SelectionMode="Extended"
             HorizontalContentAlignment="Stretch" 
             ItemsSource="{Binding Items}" 
             KeyDown="ListBox_KeyDown"
             MouseDoubleClick="ListBox_MouseDoubleClick"
             Background="Black">
        
        <ListBox.ItemTemplate>
            <DataTemplate>
                <v:ItemView HorizontalAlignment="Stretch"></v:ItemView>
            </DataTemplate>
        </ListBox.ItemTemplate>
        
    </ListBox>
    
</Window>
